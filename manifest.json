{
    "name": "Check it!",
    "version": "0.1.1",
    "manifest_version": 2,

    "description": "Multi-purpose word lookup addon",
    "icons": {
        "16": "resources/images/icon16.ico",
        "48": "resources/images/icon48.ico",
        "128": "resources/images/icon128.ico"
    },

    "browser_action": {
        "default_icon": {"19": "resources/images/icon19.png"},
        "default_title": "Check it!",
        "default_popup": "html/popup.html"
    },

    "background": {
        "persistent": false,
        "page": "html/background.html"
    },
    "content_scripts": [
        { 
            "matches": ["<all_urls>"],
            "js": ["lib/jquery-1.8.3.min.js", "scripts/content.js"],
            "css": ["css/content.css"],
            "all_frames": true
        }
    ],

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
